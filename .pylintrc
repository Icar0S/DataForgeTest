[MASTER]
# Ignore import errors for modules that exist but pylint can't find
ignore-patterns=

[MESSAGES CONTROL]
# Disable specific warnings that are false positives or unavoidable
disable=
    import-error,          # False positives for local imports
    wrong-import-position, # Necessary due to sys.path manipulation
    too-many-locals,       # Complex generator functions need many variables
    too-many-branches,     # Complex parsing logic requires many branches
    too-many-statements,   # Large generator functions are inherent to the design
    too-many-nested-blocks # Complex parsing requires nested logic

[FORMAT]
# Maximum line length
max-line-length=120

[DESIGN]
# These are already disabled above but keeping for reference
max-locals=20
max-branches=20
max-statements=70
